<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/black42"
                android:endColor="@color/black42"
                android:angle="270"
                ></gradient>
            <stroke
                android:color="@color/white1"
                android:width="3dp"></stroke>
            <corners
                android:radius="3dp"></corners>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"></padding>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/dkgray3"
                android:endColor="@color/dkgray5"
                android:angle="270"></gradient>
            <stroke
                android:width="3dp"
                android:color="@color/black42"></stroke>
            <corners
                android:radius="3dp"></corners>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"></padding>
        </shape>
    </item>
</selector>